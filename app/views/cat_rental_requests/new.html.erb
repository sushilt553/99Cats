<h1>Rent a cat</h1>

<form action="<%= cat_rental_requests_url %>" method="post">

    <label for="cats">Choose a cat:</label>
    <select name="cat_rental_request[cat_id]" id="cats">
        <option selected disabled>--Choose a cat--</option>
        <% @cats.each do |cat| %>
            <option value="<%= cat.id %>">
            <%= cat.name %>
            </option>
        <% end%>
    </select>

    <br>

    <label for="start_date">Start Date:</label>
    <input type="date" name="cat_rental_request[start_date]" id="start_date">

    <br>

    <label for="end_date">End Date:</label>
    <input type="date" name="cat_rental_request[end_date]" id="end_date">

    <br>

    <input type="submit" value="Rent a cat">
</form>

<a href="<%= cats_url %>">Home Page</a>