<h1>Edit a Cat</h1>

<form action="<%= cat_url %>" method="post">
    <input type="hidden" name="_method" value="patch">
    <label for="name">Name:</label>
    <input type="text" name="cat[name]" id="name" value=<%= @cat.name %>>

    <br>

    <label>Sex</label>
    <input type="radio" name="cat[sex]" id="sex_male" value="M" <%= @cat.sex === "M" ? "checked" : ""%>>
    <label for="sex_male">Male</label>

    <input type="radio" name="cat[sex]" id="sex_female" value="F" <%= @cat.sex === "F" ? "checked" : ""%>>
    <label for="sex_female">Female</label>

    <br>

    <label for="color">Color:</label>
    <select id="color" name="cat[color]">
        <option value="" disabled>--Select a color--</option>
        <% Cat::CAT_COLORS.each do |color| %>
            <option 
            <%= @cat.color == color ? "selected" : "" %>
            value="<%= color %>"><%= color %></option>
        <% end%>
    </select>

    <br>

    <label for="date">Birth Date:</label>
    <input type="date" name="cat[birth_date]" id="date" value=<%= @cat.birth_date %>>
    
    <br>

    <label for="description">Description:</label>
    <textarea name="cat[description]" id="description"><%= @cat.description %></textarea>

    <br>

    <input type="submit" value="Edit Cat">
</form>