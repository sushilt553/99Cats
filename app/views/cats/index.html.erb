<% if current_user %>
    <p>Welcome: <%= current_user.username %></p>
<% end%>

<h1>All Our Cats</h1>

<% if !current_user %>
    <a href="<%= new_user_url %>">Sign Up</a>
    <br>
    <a href="<%= new_session_url %>">Log In</a>
    <br>
<% end%>
<a href="<%= new_cat_url %>">+Add Cat</a>
<ul>
    <% @cats.each do |cat|%>
        <li><a href="/cats/<%= cat.id %>"><%= cat.name %></a></li>
    <% end%>
</ul>